<?xml version="1.0" encoding="UTF-8"?>
<api context="/sample_test" name="SampleTest_API" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <payloadFactory media-type="json">
                <format>[&#xd;
    {&#xd;
        "queryName": "GetCustomer",&#xd;
        "parameters": {&#xd;
            "customer_id": "518531"&#xd;
        }&#xd;
    },&#xd;
    {&#xd;
        "validateStatus": true,&#xd;
        "Response": [&#xd;
            {&#xd;
                "CUSTCODE": "1.400759"&#xd;
            }&#xd;
        ]&#xd;
    }&#xd;
]</format>
                <args/>
            </payloadFactory>
            <iterate expression="json-eval($)" id="noagg" sequential="true">
                <target>
                    <sequence>
                        <log level="custom">
                            <property name="IterationCount=========>" value="IterationCount=========>"/>
                        </log>
                        <log level="custom">
                            <property expression="$ctx:dynamicQuery" name="before@@@@@@@@@@"/>
                        </log>
                        <payloadFactory description="Dynamic Query Payload" media-type="json">
                            <format>{&#xd;
    "queryName": "CUS_OnBoarding",&#xd;
    "parameters": {&#xd;
   		"customer_id": "518531",&#xd;
		"sub_api_id": "CUS_OnBoarding"&#xd;
    }&#xd;
}</format>
                            <args>
                                <arg evaluator="xml" expression="$ctx:queryName"/>
                                <arg evaluator="json" expression="$.parameters"/>
                                <arg evaluator="json" expression="$.bscs_params"/>
                            </args>
                        </payloadFactory>
                        <propertyGroup description="BSCS Properties">
                            <property expression="get-property('file','apiRegistryConfigs')" name="apiregistryConfigPath" scope="default" type="STRING"/>
                            <property expression="json-eval($)" name="dynamicQueryMediatorRequestPayload" scope="default" type="STRING"/>
                        </propertyGroup>
                        <class description="Dynamic Query" name="com.knot.uol.mediators.DynamicXMLQueryMediator"/>
                        <log level="custom">
                            <property expression="$ctx:dynamicQuery" name="after======>"/>
                        </log>
                        <log level="custom">
                            <property expression="json-eval($ctx:dynamicQueryMediatorResponsePayload.response)" name="json-eval($ctx:dynamicQueryMediatorResponsePayload.response)"/>
                        </log>
                    </sequence>
                </target>
            </iterate>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
