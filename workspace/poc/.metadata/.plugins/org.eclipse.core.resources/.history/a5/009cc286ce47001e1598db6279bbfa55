<?xml version="1.0" encoding="UTF-8"?>
<proxy name="FileUploadProxyService" startOnLoad="true" transports="http https" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <inSequence>
            <payloadFactory media-type="xml">
                <format>
                    <fileContent>$1</fileContent>
                </format>
                <args>
                    <arg evaluator="xml" expression="get-property('inputstream')"/>
                </args>
            </payloadFactory>
            <log level="full"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </target>
</proxy>
