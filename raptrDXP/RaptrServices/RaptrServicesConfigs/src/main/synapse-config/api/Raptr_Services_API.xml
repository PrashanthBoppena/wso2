    <resource methods="POST GET" url-mapping="/test">
        <inSequence>
            <property expression="get-property('file',RaptrloginID)" name="loginID" scope="operation" type="STRING"/>
            <log level="custom">
                <property expression="get-property('file','moduleName')" name="ID"/>
            </log>
            <class name="com.knot.RaptrCredentials"/>
            <payloadFactory media-type="json">
                <format>$1</format>
                <args>
                    <arg evaluator="xml" expression="get-property('cred')"/>
                </args>
