<?xml version="1.0" encoding="UTF-8"?>
<api context="/RaptrServices" name="Raptr_Services_API" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" url-mapping="/login">
        <inSequence>
            <log level="custom">
                <property name="login" value="calling login service"/>
            </log>
            <sequence key="login"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
    <resource methods="POST" uri-template="/{uri.var.custID}/customer/details">
        <inSequence>
            <log level="custom">
                <property name="custDetails" value="calling cust info service"/>
            </log>
            <property expression="get-property('uri.var.uri.var.custID')" name="uri.var.custID" scope="default" type="STRING"/>
            <sequence key="login"/>
            <header expression="fn:concat('Bearer ',get-property('authToken'))" name="Authorization" scope="transport"/>
            <call>
                <endpoint>
                    <http method="get" uri-template="http://172.16.110.239:8086/oms/getCustomer?customerID={uri.var.custID}&amp;tenantID=10279">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
