<?xml version="1.0" encoding="UTF-8"?>
<sequence name="divideRequestProcessingSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log description="backend" level="custom">
        <property name="Log" value="Before Calling backend Claculator"/>
    </log>
    <call>
        <endpoint>
            <http method="post" uri-template="http://172.16.110.240:8280/math/Add">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>-1</progressionFactor>
                    <maximumDuration>0</maximumDuration>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </http>
        </endpoint>
    </call>
    <log level="custom">
        <property name="Log" value="After Calling Backend Calculator"/>
        <property expression="json-eval($)" name="Response"/>
    </log>
</sequence>
