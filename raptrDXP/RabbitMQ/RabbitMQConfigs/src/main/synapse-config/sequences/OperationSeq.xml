<?xml version="1.0" encoding="UTF-8"?>
<sequence name="OperationSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log description="Log" level="custom">
        <property name="Log Message" value="Calling Backend"/>
    </log>
    <property expression="json-eval($)" name="Input" scope="default" type="STRING"/>
    <call>
        <endpoint>
            <http method="post" uri-template="http://172.16.110.118:8280/math/Add">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>-1</progressionFactor>
                    <maximumDuration>0</maximumDuration>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </http>
        </endpoint>
    </call>
    <payloadFactory description="Publish to ResQueue" media-type="json">
        <format>{&#xd;
"Input":$1,&#xd;
"Output":$2&#xd;
}</format>
        <args>
            <arg evaluator="xml" expression="get-property('Input')"/>
            <arg evaluator="json" expression="$"/>
        </args>
    </payloadFactory>
    <store description="RES QUEUE" messageStore="ResponseMS"/>
</sequence>
