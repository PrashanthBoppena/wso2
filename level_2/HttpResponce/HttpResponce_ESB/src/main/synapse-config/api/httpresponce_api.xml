<?xml version="1.0" encoding="UTF-8"?>
<api context="/httpresponce" name="httpresponce_api" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST">
        <inSequence>
            <call>
                <endpoint>
                    <http method="get" uri-template="https://login.salesforce.com/services/oauth2/token">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <property description="response" expression="json-eval($)" name="response" scope="default" type="STRING"/>
            <property description="status code" expression="$axis2:HTTP_SC" name="status_code" scope="default" type="STRING"/>
            <property description="status desc" expression="$axis2:HTTP_SC_DESC" name="status_desc" scope="default" type="STRING"/>
            <payloadFactory media-type="json">
                <format>{"url":{&#xd;
"status_code":"$1",&#xd;
"text":"$2"&#xd;
}&#xd;
    &#xd;
}</format>
                <args>
                    <arg evaluator="xml" expression="get-property('status_code')"/>
                    <arg evaluator="xml" expression="get-property('status_desc')"/>
                </args>
            </payloadFactory>
            <call>
                <endpoint>
                    <http method="post" uri-template="http://DESKTOP-6I9V5BP:8280/services/statusdbcall_api/get">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <payloadFactory media-type="json">
                <format>{"api_responce":$1}&#xd;
{"header_responce":&#xd;
{"code":$2,&#xd;
"text":$3}&#xd;
}</format>
                <args>
                    <arg evaluator="xml" expression="get-property('response')"/>
                    <arg evaluator="xml" expression="get-property('status_code')"/>
                    <arg evaluator="xml" expression="get-property('status_desc')"/>
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
